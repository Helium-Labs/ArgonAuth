{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "rootDir": ".",
    "target": "ESNext",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": [
    "./**/*.ts",
    "**/src/**/*.json"
  ],
  "typeRoots": ["node_modules/@types", "node_modules"], // Ensure TypeScript looks for types here
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "tests",
    "lib"
  ]
}